<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">
            @color/main
        </item>
        <item name="android:textColor">
            @color/black
        </item>
        <item name="android:textColorPrimary">
            @color/black
        </item>
        <item name="android:textColorSecondary">
            @color/black
        </item>
        <item name="dialogCornerRadius">
            20dp
        </item>
    </style>
    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">
            30dp
        </item>
        <item name="cardElevation">
            15dp
        </item>
        <item name="cardBackgroundColor">
            @color/white
        </item>
    </style>
    <style name="CardViewStyleMaterial" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">
            20dp
        </item>
        <item name="cardElevation">
            10dp
        </item>
        <item name="cardBackgroundColor">
            @color/white
        </item>
        <item name="strokeWidth">
            1dp
        </item>
        <item name="android:strokeColor">
            @color/black
        </item>
    </style>
    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">
            @color/black
        </item>
        <item name="fontFamily">
            sans-serif
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:fontFamily">
            sans-serif
        </item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">
            @color/black
        </item>
        <item name="fontFamily">
            sans-serif
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:textColorHint">
            @color/blackEmpty
        </item>
        <item name="android:background">
            @color/empty
        </item>
        <item name="android:imeOptions">
            actionDone
        </item>
        <item name="singleLine">
            true
        </item>
        <item name="android:fontFamily">
            sans-serif
        </item>
    </style>
    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:foregroundTint">
            @color/black
        </item>
        <item name="android:background">
            @color/empty
        </item>
    </style>
    <!--Темная тема базовая-->
    <style name="CardViewStyleDark" parent="CardView">
        <item name="cardCornerRadius">
            30dp
        </item>
        <item name="cardElevation">
            15dp
        </item>
        <item name="cardBackgroundColor">
            @color/black
        </item>
    </style>
    <style name="CardViewStyleMaterialDark" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">
            20dp
        </item>
        <item name="cardElevation">
            10dp
        </item>
        <item name="cardBackgroundColor">
            @color/black
        </item>
        <item name="strokeWidth">
            1dp
        </item>
        <item name="android:strokeColor">
            @color/gray
        </item>
    </style>
    <style name="ImageButtonDark" parent="Widget.AppCompat.ImageButton">
        <item name="android:foregroundTint">
            @color/gray
        </item>
        <item name="android:background">
            @color/empty
        </item>
    </style>
    <style name="TextViewStyleDark" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">
            @color/gray
        </item>
        <item name="fontFamily">
            sans-serif
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:fontFamily">
            sans-serif
        </item>
    </style>

    <style name="EditTextStyleDark" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">
            @color/gray
        </item>
        <item name="fontFamily">
            sans-serif
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:textColorHint">
            @color/whiteEmpty
        </item>
        <item name="android:background">
            @color/empty
        </item>
        <item name="android:imeOptions">
            actionDone
        </item>
        <item name="singleLine">
            true
        </item>
        <item name="android:fontFamily">
            sans-serif
        </item>
    </style>
</resources>